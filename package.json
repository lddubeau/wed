  "scripts": {
    "build": "monist run --serial --local-deps=install build",
    "build-and-test": "monist run --serial --local-deps=install build-and-test",
    "clean": "monist run clean",
    "postinstall": "link-parent-bin",
    "lint": "npmPkgJsonLint package.json && monist run --serial --local-deps=install lint",
    "self:publish": "env npm_config_tag=`./tasks/select-publish-tag` monist run self:publish",
    "self:test-publish": "env npm_config_registry=http://localhost:4873 npm_config_tag=`./tasks/select-publish-tag` monist run self:publish",
    "preversion": "monist npm --serial version $npm_package_version",
    "postversion": "monist update-versions $npm_package_version && git add package.json package-lock.json packages/*/package.json && git commit -m'build: version bump' && git tag -a v$npm_package_version && npm run build-and-test && npm run self:publish",
    "distclean": "rm -rf node_modules && monist run distclean",
    "packages-distclean": "monist run distclean"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
