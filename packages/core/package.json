{
  "name": "@wedxml/core",
  "version": "2.0.0",
  "private": true,
  "description": "Wed is a schema-aware editor for XML documents.",
  "author": "Louis-Dominique Dubeau <louisd@mangalamresearch.org>",
  "scripts": {
    "config": "mkdir -p build/config && cp -rp ../../config ../../local_config build/config",
    "generate-ts": "./tasks/generate-ts",
    "tsc": "npm run generate-ts && tsc -p src/tsconfig.json --outDir build/standalone/lib && tsc -p src/wed/cli/tsconfig.json --outDir build/standalone/lib",
    "copy-src": "mkdir -p build/standalone/lib && (cd src; cp --parents `find . -regex '.*\\.\\(js\\|json\\|d.ts\\|xml\\|html\\|xsl\\)$' \\! -regex '.*/\\(\\(tsconfig\\|tslint\\).json\\|.*_flymake.*\\|.*/flycheck.*\\)$'` ../build/standalone/lib/)",
    "yml-to-json": "mkdir -p build/standalone/lib/wed && ../../tasks/yml-to-json src/wed/wed-options-schema.yml build/standalone/lib/wed/wed-options-schema.json",
    "less": "mkdir -p build/standalone/lib/wed && lessc --include-path=src/wed/less-inc/:../../node_modules/bootstrap/dist/css src/wed/wed.less build/standalone/lib/wed/wed.css",
    "build-dev": "npm run copy-src && npm run yml-to-json && npm run tsc",
    "build": "gulp",
    "build-and-test": "gulp test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mangalam-research/wed.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mangalam-research/wed/issues"
  },
  "homepage": "https://github.com/mangalam-research/wed#readme",
  "keywords": [
    "RelaxNG",
    "rng",
    "XML",
    "editor"
  ],
  "dependencies": {
    "@wedxml/ajax-saver": "1.0.0",
    "@wedxml/client-api": "1.0.0",
    "@wedxml/common": "1.0.0",
    "@wedxml/default-runtime": "1.0.0",
    "@wedxml/trivial-grammar-loader": "1.0.0",
    "ajv": "^6.6.2",
    "argparse": ">=1.0.3 <2",
    "inversify": "^4.13.0",
    "js-yaml": "^3.12.0",
    "reflect-metadata": "^0.1.12",
    "salve": "^9.0.1"
  },
  "bin": {
    "wed-metadata": "./bin/wed-metadata"
  }
}
