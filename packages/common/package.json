{
  "name": "@wedxml/common",
  "version": "5.0.0-alpha.10",
  "private": true,
  "description": "The common infrastructure for code using wed editors.",
  "keywords": [
    "RelaxNG",
    "rng",
    "XML",
    "editor",
    "wed"
  ],
  "homepage": "https://github.com/mangalam-research/wed#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mangalam-research/wed.git"
  },
  "bugs": {
    "url": "https://github.com/mangalam-research/wed/issues"
  },
  "author": "Louis-Dominique Dubeau <louisd@mangalamresearch.org>",
  "license": "MPL-2.0",
  "main": "build/dist/index.js",
  "versionedSources": "src/index.ts",
  "dependencies": {
    "@wedxml/client-api": "5.0.0-alpha.10"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "clean-package": "../../tasks/clean-package package.json build/dist/package.json",
    "add-modules": "cd build/dist; ln -sf ../../node_modules .",
    "build": "npm run tsc && npm run clean-package && npm run add-modules",
    "lint": "tslint --format verbose -p tsconfig.json -c ../../tslint.json && tslint --format verbose -p test/tsconfig.json -c test/tslint.json && npmPkgJsonLint package.json",
    "test": "karma start --single-run",
    "posttest": "npm run lint",
    "build-and-test": "npm run build && npm run test",
    "pack-npjl": "npmPkgJsonLint -c ../../../../tasks/publish-npjl-config.json .",
    "prepublishOnly": "npm run pack-npjl",
    "self:publish": "cd build/dist && npm publish",
    "version": "versync -b sync -a",
    "clean": "rm -rf build",
    "distclean": "npm run clean && rm -rf node_modules"
  }
}